<link rel="stylesheet" href="style.css" />
<%- include("header.ejs") %>

<div class="full2">
    <div>
        <h1><%= heading %> Tasks List</h1>
        <% if(locals.DateName){ %>
            <h2><%= DateName %></h2>
        <% }else{ %>
            <h2>Date</h2>
        <%  } %>
        <form action="/add2" method="post" class="form">
            <input type=" text" name="text" placeholder="  New Item" class="input1">
            <input type="submit" value="ADD" class="input2">

             <!-- Display an alert if the 'alertMessage' variable is set -->
             <% if (alertMsg) { %>
                <div class="arrow message"></div>
             <% } %>
        </form>
    </div> 

    <% for(var i=0;i<addTask.length;i++){ %>
    <form action="/deleteToday" method="post">
        <div class="js">
            <input type="checkbox" class="contentToCross" name="checkbox" value="<%= addTask[i]._id %>" onChange="this.form.submit()">
            <label for="contentToCross"><%= addTask[i].name %></label>
        </div>
    </form>
    <% } %>
</div>

<%- include("footer.ejs") %>